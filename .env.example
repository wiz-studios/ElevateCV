# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AI Configuration
USE_AI_TAILORING=true
OPENAI_PARSER_MODEL=openai/gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Paystack Configuration
# Get these from: https://dashboard.paystack.com/#/settings/developer
PAYSTACK_SECRET_KEY=sk_test_your_secret_key
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_your_public_key

# Paystack Webhook Secret
# Get this from: https://dashboard.paystack.com/#/settings/developer
# For local testing: Use ngrok or similar tool to expose localhost
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret

# Paystack Plan Codes (configure these as Plans in Paystack Dashboard)
# Subscriptions (create these as Plans in Paystack with USD currency)
PAYSTACK_PREMIUM_MONTHLY_PLAN_CODE=PLN_premium_monthly
PAYSTACK_PREMIUM_YEARLY_PLAN_CODE=PLN_premium_yearly
PAYSTACK_ENTERPRISE_MONTHLY_PLAN_CODE=PLN_enterprise_monthly
PAYSTACK_ENTERPRISE_YEARLY_PLAN_CODE=PLN_enterprise_yearly

# One-time purchases (Credits) - amounts in cents (USD)
# For example: 999 cents = $9.99
PAYSTACK_CREDITS_5_AMOUNT=499      # $4.99
PAYSTACK_CREDITS_15_AMOUNT=999     # $9.99
PAYSTACK_CREDITS_50_AMOUNT=2499    # $24.99
