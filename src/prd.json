    "ats_compatibility": {
      "metric": "ats_score",
      "target": "90% of tailored resumes score 70+ on ATS check"
    },
    "export_rate": {
      "metric": "pdf_downloads",
      "target": "60% of completed resumes exported as PDF"
    }
  },
  "technical_requirements": {
    "backend": "Next.js API Routes (TypeScript)",
